@page
@model Shop.Web.Pages.Auth.LoginModel
@{
    Layout = "Shared/_AuthLayout";

}
<section class="login-area">
    <div class="row m-0">
        <div class="col-lg-12 col-md-12 p-0">
            <div class="login-content">
                <div class="d-table">
                    <div class="d-table-cell">
                        <div class="login-form">
                            <div class="logo">
                                <a href="index.html"><img src="/assetsAuth/img/black-logo.png" alt="image"></a>
                            </div>

                            <h3>خوش آمدید</h3>
                            <p>کاربر جدید هستید؟ <a asp-page="Register">ثبت نام</a></p>

                            <form method="post">
                                <div class="form-group">
                                    <input asp-for="PhoneNumber" placeholder="تلفن همراه" class="form-control">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                                </div>

                                <div class="form-group">
                                    <input type="password" asp-for="Password" placeholder="رمز عبور " class="form-control">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="forgot-password">
                                    <a href="#">رمز عبور را فراموش کرده اید؟</a>
                                </div>
                                <button type="submit">ثبت نام</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>